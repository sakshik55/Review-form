 }

.rating {
    direction: rtl;
    font-size: 40px;
    unicode-bidi: bidi-override;
    display: inline-block;
}
.rating input {
    opacity: 0;
    position: relative;
    left: -30px;
    z-index: 2;
    cursor: pointer;
}
.rating span.rating-star:before {
    color: #777777;
}
.rating span.rating-star {
    display: inline-block;
    font-family: FontAwesome;
    font-style: normal;
    font-weight: normal;
    position: relative;
}
.rating span {
    margin-left: -30px;
}
.rating span.rating-star:before {
    color: #777777;
    content:"\f006";
}
.rating input:hover + span.rating-star:before, .rating input:hover + span.rating-star ~ span.rating-star:before, .rating input:checked + span.rating-star:before, .rating input:checked + span.rating-star ~ span.rating-star:before {
    color: #ffd100;
    content:"\f005";
}


